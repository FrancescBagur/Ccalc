<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#449def" />
            <stroke
                android:width="1dp"
                android:color="#0150fc" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#ffffff"
                android:endColor="#9a9696"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#2f6699" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <corners
                android:radius="10dp"
                android:bottomLeftRadius="7dp"
                android:topLeftRadius="7dp"
                android:bottomRightRadius="7dp"
                android:topRightRadius="7dp"/>
        </shape>
    </item>



</selector>






