<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#486CB8" />
            <stroke
                android:width="1dp"
                android:color="#ffffff" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <corners
                android:radius="0dp"
                />
            <solid
                android:color="#486CB8"
                />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"
                />
            <size
                android:width="250dp"
                android:height="60dp"
                />
            <stroke
                android:width="1dp"
                android:color="#486CB8"
                />
        </shape>
    </item>
</selector>
